<Window x:Class="Binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binding"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="400"
        Width="600">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="Intro" Click="loadBindingIntro" />
            <Button Content="Intro Übung" Click="loadBindingIntroExercise" />
            <Button Content="Bindungsrichtung" Click="loadBindingDirection"/>
            <Button Content="Übung für Externe Daten" Click="loadBindingExternal"/>
            <Button Content="Formatieren und Konvertieren" Click="loadBindingFormatAndConvert"/>
            <Button Content="Konvertierungsübung" Click="loadBindingConvertExercise"/>
            <Button Content="Binden an Properties" Click="loadBindingProperties"/>
            <Button Content="Binden an Kommandos" Click="loadBindingCommand"/>
        </StackPanel>
        <Frame Grid.Column="1" x:Name="frmContent" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
