<Page x:Class="MultiThreading.pgeThreadingTaskCancel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiThreading"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pgeThreadingTaskCancel">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
        <Button Width="80" Height="22" Content="Start" Click="btnStart_Click"/>
        <Button Width="80" Height="22" Content="Stop" Click="btnStop_Click"/>
        <Rectangle x:Name="rectOut" Fill="Blue" Height="22"  Width="22"/>
        <TextBlock Width="80" x:Name="tblOut" Text="0" />
    </StackPanel>
    
</Page>
