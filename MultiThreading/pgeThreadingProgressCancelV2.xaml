<Page x:Class="MultiThreading.pgeThreadingProgressCancelV2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiThreading"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      x:Name="pgeThreading"
      Title="pgeThreadingProgressCancelV2">
    <Page.Resources>
        <Style TargetType="ProgressBar">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="50" />
            <Setter Property="Maximum" Value="100" />
            <Setter Property="Margin" Value="2" />
        </Style>
    </Page.Resources>
    <StackPanel Height="400">
        <Button Content="Start" Click="btnStart_Click" />
        <Button Content="Stop" Click="btnStop_Click" />
        <TextBlock Width="100" Text="{Binding ElementName=pgeThreading, Path=Sum, StringFormat=Summe : {0}}"/>
        <TextBlock Width="100" Text="{Binding ElementName=pgeThreading, Path=Avg, StringFormat=Durchschnitt : {0}}"/>
        <WrapPanel Orientation="Horizontal" x:Name="spProgress"/>
    </StackPanel>
</Page>
