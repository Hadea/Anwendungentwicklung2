<Page x:Class="MultiThreading.pgeThreadingProgressCancel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiThreading"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pgeThreadingProgressCancel">

    <StackPanel Height="400">
        <Button Content="Start" Click="btnStart_Click" />
        <Button Content="Stop" Click="btnStop_Click" />
        <StatusBar>
            <StatusBarItem>
                <ProgressBar x:Name="pbProgress" Maximum="1000" Width="400" Height="20"/>
            </StatusBarItem>
            <Separator/>
            <TextBlock x:Name="tbResult" Width="100"/>
        </StatusBar>
    </StackPanel>
</Page>
