<Page x:Class="Controls.pgeSound"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pgeSound">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Play" Height="40" Width="80" Click="btnPlay_Click" />
            <Button Content="Pause" Height="40" Width="80" Click="btnPause_Click" />
            <Button Content="Stop" Height="40" Width="80" Click="btnStop_Click" />
        </StackPanel>
        <Button Grid.Row="1" Content="Klick-Sound" Width="100" Height="40" Click="btnClickSound_Click"/>
    </Grid>
</Page>
